{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "./config/*.yaml",
        "outDir": "./dist/src",
        "watchAssets": true
      },
      {
        "include": "./config/environments/*.env",
        "outDir": "./dist/src",
        "watchAssets": true
      },
      "assets/*.html"
    ],
    "watchAssets": true
  }
}
